#include <math.h> in header

int i,j,k=0,l=0;
   while (num>1){
       i = num%10;
       if (i%2 == 0) {
           k += i*(pow(10, l++));}
 num /= 10;  }
 if (k==0) k=-1;
 return k;
 
 //pointer
 int i,j,l=0;
   *result = 0;
   while (num>1){
       i = num%10;
       if (i%2 == 0) {
           *result += i*(pow(10, l++));}
 num /= 10;  }
 if (*result==0) *result=-1;
